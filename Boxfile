  env:
    - LARAVEL_ENV: production
web1:
  name: travel-together
  shared_writable_dirs:
    - /storage/cache
    - /storage/database
    - /storage/logs
    - /storage/sessions
    - /storage/views
    - /storage/work
  document_root: /public
  php_version: 7.0.0
  before_deploy:
    - "php artisan migrate:install"
    - "php artisan migrate"
  after_deploy:
    - "rm -f storage/cache/*"
    - "rm -f storage/views/*"
  
